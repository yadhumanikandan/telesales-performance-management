# ===========================================
# OPTIONAL: Project Settings
# ===========================================

# Project identifier
PROJECT_ID=sales-performance-tracker

# Organization and project names shown in Studio
ORGANIZATION_NAME=Your Organization
PROJECT_NAME=Sales Performance Tracker

# ===========================================
# OPTIONAL: Email Configuration (SMTP)
# ===========================================
# Required for password reset, email invites, etc.
# Leave empty to use auto-confirm (no email verification)

SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_ADMIN_EMAIL=admin@example.com
SMTP_SENDER_NAME=Sales Performance Tracker

# ===========================================
# OPTIONAL: Authentication Settings
# ===========================================

# Set to true to disable public signups (invite-only)
DISABLE_SIGNUP=false

# Additional redirect URLs after authentication (comma-separated)
ADDITIONAL_REDIRECT_URLS=

# ===========================================
# OPTIONAL: Logging
# ===========================================

# Logflare API key (leave empty to disable)
LOGFLARE_API_KEY=
